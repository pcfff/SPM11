<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.teachingplatform.mapper.CourseMapper">

    <resultMap id="BaseResultMap" type="com.example.teachingplatform.entity.Course">
            <id property="id" column="id" jdbcType="INTEGER"/>
            <result property="name" column="name" jdbcType="VARCHAR"/>
            <result property="period" column="period" jdbcType="INTEGER"/>
            <result property="score" column="score" jdbcType="INTEGER"/>
            <result property="userId" column="user_id" jdbcType="INTEGER"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
            <result property="major" column="major" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,name,period,
        score,user_id,create_time,
        major
    </sql>
    <insert id="save">
        insert into course(name, period, score, user_id, create_time, major)
        values (#{name}, #{period}, #{score}, #{userId}, #{createTime}, #{major})
    </insert>
    <update id="updateById">
        update course
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="period != null">
                period = #{period},
            </if>
            <if test="score != null">
                score = #{score},
            </if>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="major != null and major != ''">
                major = #{major},
            </if>
        </set>
        where id = #{id}
    </update>
    <delete id="removeById">
        delete from course where id = #{id}
    </delete>
    <select id="getById" resultMap="BaseResultMap">
        select
            id, name, period, score, user_id, create_time, major
        from course
        where id = #{id}
    </select>
    <select id="list" resultMap="BaseResultMap">
        select
        id, name, period, score, user_id, create_time, major
        from course
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name like concat('%', #{name}, '%')
            </if>
            <if test="period != null">
                and period = #{period}
            </if>
            <if test="score != null">
                and score = #{score}
            </if>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
            <if test="major != null and major != ''">
                and major = #{major}
            </if>
        </where>
    </select>
</mapper>
