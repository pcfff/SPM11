<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.teachingplatform.mapper.NoticeMapper">

    <resultMap type="com.example.teachingplatform.entity.Notice" id="NoticeMap">
        <result property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="courseId" column="course_id"/>
        <result property="createTime" column="create_time"/>
        <result property="userId" column="user_id"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="NoticeMap">
        select
          id, title, content, course_id, create_time, user_id
        from notice
        where id = #{id}
    </select>


    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultType="com.example.teachingplatform.dto.NoticeDTO">
        select
        notice.id, title, content, course_id courseId, notice.create_time createTime, notice.user_id userId, name courseName
        from notice
        left join course c on c.id = notice.course_id
        <where>
            <if test="id != null">
                and notice.id = #{id}
            </if>
            <if test="title != null and title != ''">
                and title = #{title}
            </if>
            <if test="content != null and content != ''">
                and content = #{content}
            </if>
            <if test="courseId != null">
                and course_id = #{courseId}
            </if>
            <if test="createTime != null">
                and notice.create_time = #{createTime}
            </if>
            <if test="userId != null">
                and notice.user_id = #{userId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into notice(title, content, course_id, create_time, user_id)
        values (#{title}, #{content}, #{courseId}, #{createTime}, #{userId})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update notice
        <set>
            <if test="title != null and title != ''">
                title = #{title},
            </if>
            <if test="content != null and content != ''">
                content = #{content},
            </if>
            <if test="courseId != null">
                course_id = #{courseId},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="userId != null">
                user_id = #{userId},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from notice where id = #{id}
    </delete>

</mapper>

